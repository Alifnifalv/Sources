@model Eduegate.Web.Library.ViewModels.DocumentFileViewModel
@{
}
<div class="productcreteheader">Documents</div>
<table cellpadding="0" cellspacing="0" class="grid documents">
    <thead>
        <tr>
            <th class="check-box"></th>
            <th class="large">File Name</th>
            <th class="large">Description</th>
            <th class="large">Owner Name</th>
            <th class="version">Version</th>
            <th class="medium">Status</th>
            <th class="icons"></th>
        </tr>
    </thead>

    <tbody>
        <tr ng-repeat="doc in CRUDModel.ViewModel.Document.Documents track by $index">
            <td class="check-box"><input type="checkbox" /></td>
            <td class="large">
                <i class="fa fa-folder"></i>
                <input class="filname" type="text" ng-model="doc.Title" placeholder="File name1" />
                <i class="fa fa-upload"></i>
            </td>
            <td class="large"><input type="text" ng-model="doc.Description" placeholder="Description1"/></td>
            <td class="large">
                <ui-select single style="width: 100%;" ng-model="doc.OwnerEmployeeID" theme="select2" class="pos-txt"
                           ng-change="OnChangeSelect2('doc.ValueField', 'doc.DataType', $select, 'single');">
                    <ui-select-match placeholder="Search">{{$select.selected.Value}}</ui-select-match>
                    <ui-select-choices repeat="data in LookUps.OwnerEmployee | filter:$select.search">{{data.Value}}</ui-select-choices>
                </ui-select>
            </td>
            <td class="version"><input type="text" ng-model="doc.Version" placeholder="1.02"/></td>
            <td class="medium">
                <select ng-model="doc.DocumentStatusID">
                    <i class="fa fa-caret-down"></i>
                    <option ng-repeat="data in LookUps.DocumentFileStatuses" value={{data.Key}} ng-selected="doc.DocumentStatusID == data.Key">{{data.Value}}</option>
                </select>
            </td>
            <td class="icons">
                @*<input type="file" title="upload"
                       onchange="angular.element(this).scope().UploadImageFiles(this, 'Mutual/UploadImages', 'Documents', 'CRUDModel.ViewModel.Document.Documents', 'FileName', angular.element(this).scope().doc, angular.element(this).scope().$index)" ng-model="doc.FileName" />
                <a class="download" ng-href="{{doc.FilePath}}" target="_blank" title="download">Download</a>*@
                <a href="#" @*ng-if="$index == 0"*@ ng-click="InsertOnTop(CRUDModel.ViewModel.Document, $index)" ng-class="$index == 0 ? 'button-orange add-option' : 'button-orange remove-option'" ng-bind="$index == 0 ? '+' : 'x'"></a>
            </td>
        </tr>
    </tbody>

</table>