            @await Html.PartialAsync("_FeeCollectionCase")
        </div>

        <div class="scheduleWrapper innertab subject" id="Tab_05" style="display:none">
            @await Html.PartialAsync("_ComplaintCase")
        </div> *@
     
    </div>
</div>