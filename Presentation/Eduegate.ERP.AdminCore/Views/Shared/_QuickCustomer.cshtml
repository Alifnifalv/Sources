<form class="form-horizontal" name="quickCustomer" novalidate>
    <span style="color:red;" id="spnMessage" ng-bind-html="message | safehtml"></span>
    <div>
        <label>Name:</label>
        <span class="inputwrap">
            <input type="text" name="Name" ng-model="Customer.FirstName" required>
            <span class="cufon" style="color:red" ng-show="submitted && quickCustomer.Name.$error.required">Name is required.</span>
        </span>
    </div>
    <div>
        <label>Email:</label>
        <span class="inputwrap">
            <input type="text" name="Email" ng-model="Customer.Login.LoginEmailID" validate-email
                   ng-required="!(Customer.Login.LoginEmailID || Customer.Contacts[0].MobileNo1)">
            @*<span class="cufon" style="color:red" ng-show="submitted && quickCustomer.Email.$error.required">Email is required.</span>*@
            <span class="cufon" style="color:red" ng-show="submitted && quickCustomer.Email.$error.EmailId">Invalid Email.</span>
        </span>
    </div>
    <div>
        <label>Phone:</label>
        <span class="inputwrap">
            <input type="text" name="Phone" maxlength="10" numbers-only="numbers-only" ng-minlength="5" ng-maxlength="10"
                   ng-model="Customer.Contacts[0].MobileNo1" ng-required="!(Customer.Login.LoginEmailID || Customer.Contacts[0].MobileNo1)">
            <span class="cufon" style="color:red" ng-show="submitted && !(Customer.Login.LoginEmailID || Customer.Contacts[0].MobileNo1)">Email OR Phone is required.</span>
            <span class="cufon" style="color:red" ng-show="((quickCustomer.Phone.$error.minlength || quickCustomer.Phone.$error.maxlength) && quickCustomer.Phone.$dirty) ">Invalid Phone.</span>
        </span>
    </div>

    <div>
        <label>Customer TRN:</label>
        <span class="inputwrap">
            <input type="text" name="Phone" maxlength="10" numbers-only="numbers-only" ng-minlength="5" ng-maxlength="10"
                   ng-model="Customer.CustomerCR">
        </span>
    </div>
    <div class="fullwidth alignleft paddingbtm10">
        <div class="pull-right">
            <button class="button-green button" ng-click="DetailedCreateCustomer($event);">Detailed Creation</button>
            <button class="button-orange" ng-click="IsCustomerEmailPhoneExist();">Save</button>
        </div>
    </div>
</form>