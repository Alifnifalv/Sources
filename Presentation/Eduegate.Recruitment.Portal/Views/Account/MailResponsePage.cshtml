@model Eduegate.Recruitment.Portal.Models.LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Response";
    var settingBL = new Eduegate.Domain.Setting.SettingBL(null);
    var clientName = settingBL.GetSettingValue<string>("CLIENTINSTANCE");
    var clientFullName = settingBL.GetSettingValue<string>("CLIENT_FULL_NAME");
}

<!DOCTYPE html>
<html ng-app="Eduegate.Recruitment.Portal">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <script src="~/Scripts/jquery-3.4.1.js" asp-append-version="true"></script>
    <script src="~/Scripts/jquery.prettyPhoto.js" asp-append-version="true"></script>
    <script src="~/Scripts/jquery.validate.js" asp-append-version="true"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.custom.js" asp-append-version="true"></script>
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js" asp-append-version="true"></script>
    <script src="~/Scripts/bootstrap.js" asp-append-version="true"></script>
    <script src="~/Scripts/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/Scripts/respond.js" asp-append-version="true"></script>
    <script src="~/Scripts/angular.js" asp-append-version="true"></script>
    <script src="~/Scripts/angular-route.js" asp-append-version="true"></script>
    <script src="~/Scripts/angular-animate.js" asp-append-version="true"></script>
    <script src="~/Scripts/angular-sanitize.js" asp-append-version="true"></script>
    <script src="~/Scripts/angular-filter.min.js" asp-append-version="true"></script>
    <script src="~/app/Services/app.js" asp-append-version="true"></script>
    <script src="~/app/schedule.js" asp-append-version="true"></script>
    <script src="~/app/util.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link href="~/Content/dashboard/dashboard.css" rel="stylesheet" />
    <link href="~/Content/dashboard/docs.css" rel="stylesheet" />
    <link href="~/Content/dashboard/style.bundle.css" rel="stylesheet" />
    <script src="~/app/Controller/LayoutHeaderController.js" asp-append-version="true"></script>
    <script src="~/app/Controller/DashboardController.js" asp-append-version="true"></script>
    <script src="~/app/Controller/LoginController.js" asp-append-version="true"></script>
    <script src="~/Scripts/jquery.waypoints.min.js" asp-append-version="true"></script>
    <script src="~/Scripts/moment.min.js" asp-append-version="true"></script>
    <script src="~/Scripts/angular-moment.min.js" asp-append-version="true"></script>
    <script src="~/Scripts/jquery-ui.js" asp-append-version="true"></script>
    <script src="~/Scripts/jquery.ui.touch-punch.min.js" asp-append-version="true"></script>
    <script src="~/Scripts/Custom.js" asp-append-version="true"></script>
    <script src="~/Scripts/jquery.signature.js" asp-append-version="true"></script>
    <script src="~/app/utility.js" asp-append-version="true"></script>
    <script src="~/Scripts/JSLINQ.js" asp-append-version="true"></script>
    <script src="~/Scripts/ng-map.min.js" type="text/javascript" asp-append-version="true"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/plugins.bundle.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Style.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700,900|Ubuntu:400,500,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700,900|Ubuntu:400,500,700" rel="stylesheet">

    <title>Response Page</title>
</head>
<body>
    <div class="row mt-5 px-5">
           <p class="loginTitle">@clientFullName</p>
        </div>
    <section class="section about-section gray-bg" id="about">
        <div class="container">
            <div class="row align-items-center justify-content-around flex-row-reverse">
                <div class="col-lg-8">
                    <div class="about-text">
                        <h3 class="dark-color">Thanks for your response and confirmation. </h3>
                        <div class="btn-bar text-center">
                            <a class="px-btn theme" href="~/Account/Login">Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
<style>
    body {
        margin-top: 20px;
    }

    .about-text h3 {
        font-size: 45px;
        font-weight: 700;
        margin: 0 0 10px;
    }

    .about-text h4 {
        font-weight: 600;
        margin-bottom: 15px;
    }

    .about-text p {
        font-size: 18px;
    }

        .about-text p mark {
            font-weight: 600;
            color: #3a3973;
        }

    .about-text .btn-bar {
        padding-top: 8px;
    }

        .about-text .btn-bar a {
            min-width: 150px;
            text-align: center;
            margin-right: 10px;
        }

    .theme-color {
        color: #fe4f6c;
    }

    .section {
        padding: 100px 0;
        position: relative;
        margin-top:100px;
    }

    .gray-bg {
        background-color: #ebf4fa;
    }

    .px-btn.theme {
        background: #fe4f6c;
        color: #ffffff;
        border: 2px solid #fe4f6c;
    }

    .px-btn {
        padding: 0 20px;
        line-height: 42px;
        border: 2px solid transparent;
        position: relative;
        display: inline-block;
        background: none;
        border: none;
        -moz-transition: ease all 0.35s;
        -o-transition: ease all 0.35s;
        -webkit-transition: ease all 0.35s;
        transition: ease all 0.35s;
        border-radius: 5px;
        font-size: 16px;
        font-weight: 500;
        text-decoration: none;
    }

        .px-btn.theme-t {
            background: transparent;
            border: 2px solid #fe4f6c;
            color: #fe4f6c;
        }
</style>