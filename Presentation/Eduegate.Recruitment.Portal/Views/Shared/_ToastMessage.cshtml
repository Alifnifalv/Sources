@{
    Layout = null;
    var toastMessage = TempData["ToastMessage"] as string;
    var toastErrorMessage = TempData["ToastErrorMessage"] as string;
}

<link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
@* <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> *@
<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

@if (!string.IsNullOrEmpty(toastErrorMessage))
{
    <script type="text/javascript">
        // Display the toast message in the center using Toastr
        toastr.options = {
            "positionClass": "toast-right",
        };
        toastr.error('@toastErrorMessage');

    </script>
}

@if (!string.IsNullOrEmpty(toastMessage))
{
    <script type="text/javascript">
        // Display the toast message in the center using Toastr
        toastr.options = {
        "positionClass": "toast-right",
        };

        toastr.success('@toastMessage');

    </script>
}