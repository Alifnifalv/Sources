@{
    ViewBag.Title = "My Assignments Plans";
    Int64 CandidateIDfromOutSide = 0;

    try
    {
        if (!string.IsNullOrEmpty(Context.Request.Query["sID"]))
        { CandidateIDfromOutSide = Convert.ToInt64(Context.Request.Query["sID"]); }
    }
    catch { CandidateIDfromOutSide = 0; }
    <input type="hidden" id="CandidateIDfromOutSide" value="@CandidateIDfromOutSide" />
}

<div ng-controller="MyAssignmentsController" ng-init="Init()">
    

    <!--begin::Wrapper container-->
    <div class="app-container py-20">

        <!--begin::Main-->
        <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
            <!--begin::Content wrapper-->
            <div class="d-flex flex-column flex-column-fluid">
                <div id="kt_app_content" class="app-content flex-column-fluid ">
                    <div class="row g-5 g-xl-8">
                        <div class="col-xl-8 ps-xl-12">
                            <div class="card bgi-position-y-bottom bgi-position-x-end bgi-no-repeat bgi-size-cover min-h-250px bg-body mb-5 mb-xl-8">
                                <div class="card-body d-flex flex-column justify-content-center">

                                    <div class="container-fluid">

                                        <div id="Assignments" class="">
                                            <div class="d-flex flex-stack flex-wrap gap-2 mt-n1 mb-6 tab-products-header">
                                                <div class="page-title d-flex flex-column align-items-start me-3 py-2 py-lg-0 gap-2 section-title">
                                                    <h1 class="d-flex text-dark fw-bold m-0 fs-3">Assignments</h1>
                                                    <ul class="breadcrumb breadcrumb-dot fw-semibold text-gray-600 fs-7">
                                                        <li class="breadcrumb-item text-gray-600">
                                                            <a class="text-gray-600 text-hover-primary">Home</a>
                                                        </li>
                                                        <li class="breadcrumb-item text-gray-600">Ward</li>
                                                        <li class="breadcrumb-item text-gray-500">Assignments</li>
                                                    </ul>
                                                </div>
                                                <div class="d-flex align-items-center gap-2 gap-lg-3">
                                                    @*<select ng-model="myColor"
                                                    ng-options="studentsubjectlist.Value in studentsubjectlist">
                                                    </select>*@
                                                    <select id="Select2" name="cmb_cur" class="form-control select2-sm  w-250px"
                                                            ng-change="getAssignments(activeStudentID ,edt.studentsubject)"
                                                            ng-model="edt.studentsubject"
                                                            ng-options=" studentsubject as  studentsubject.Value for  studentsubject in studentsubjectlist" ng-required="true" required="required">
                                                        <option value="" class="" selected="selected">Select subject</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <!--begin::Post-->
                                            <div class="flex-column-fluid">
                                          @*       <div id="AssignmentListOverlay" class="preload-overlay center">
                                                    <span id="AssignmentListOverlayButtonLoader" class="preloadImg">
                                                        <img src="~/Images/preloaderWhite.GIF" alt="loader" />
                                                    </span>
                                                </div> *@

                                                <div class="panel-body">
                                                    <div class="tab-content p-md-sm-0">
                                                        <div class="tab-pane active" id="Assignment_File">
                                                        </div>
                                                        <div class="tab-pane" id="Assignment_List">
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="fullcolumn-layout" ng-if="AssignmentList != null && AssignmentList.length > 0">
                                                    <div class="table-responsive table-responsive-custom">
                                                    </div>
                                                </div>
                                                <div class="alert alert-info text-center" ng-if="!ShowPreLoader && (AssignmentList == null || AssignmentList.length == 0)">
                                                    <b>There is no Assignment details found!</b>
                                                </div>
                                                <table id="myTable" class="display">
                                                    <thead>
                                                        <tr>
                                                            <th></th>
                                                            <th>Created Date</th>
                                                            <th>Subject</th>
                                                            <th>Title</th>
                                                            <th class="min-w-150px">Description</th>
                                                            <th>Date of Submission</th>
                                                            <th>Assignment Type</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div><!--Assignments-->
</div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<script>
    $('.ui.accordion').accordion();
</script>