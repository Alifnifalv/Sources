@{
    ViewBag.Title = "Meeting Request List";
    var clientname = new Eduegate.Domain.FrameworkSettingBL(null).GetSettingValue<string>("CLIENTINSTANCE");

}

<div class="app-main flex-column flex-row-fluid " ng-controller="AssignmentListController">
    <!--begin::Content wrapper-->
    <div class="d-flex flex-column flex-column-fluid">

        <!--begin::Toolbar-->
        <!--begin::Content-->
        <div id="kt_app_content" class="app-content  flex-column-fluid ">


            <!--begin::Content container-->
            <div id="kt_app_content_container" class="app-container  container-fluid ">

                <!--begin::Row-->
                <div class="row g-5 g-xl-10">
                    <!--begin::Col-->
                    <div class="col-xl-8 mb-5 mb-xl-10">
                        <!--begin::Timeline Widget 1-->
                        <div class="card card-flush h-xl-100">
                            <!--begin::Card header-->
                            <div class="card-header pt-5">
                                <!--begin::Card title-->
                                <h3 class="card-title align-items-start flex-column">
                                    <span class="card-label fw-bold text-gray-900">Assignments</span>
                                </h3>
                                <!--end::Card title-->
                                <!--begin::Card toolbar-->
                                <div class="card-toolbar">
                                    <span> see all</span>
                                </div>
                                <!--end::Card toolbar-->
                            </div>
                            <!--end::Card header-->
                            <!--begin::Body-->
                            <div class="card-body py-3">

                                <div class="row g-5 g-lg-8 mb-5 mb-xl-0">

                                    <div class="accordion accordion-flush" id="accordionExample{{subjectKey}}">
                                            <div class="accordion-item mb-3"
                                                 ng-repeat="(subjectKey, assignmentsGroup) in GroupedAssignmentList">
                                                <h2 class="accordion-header" id="heading{{subjectKey}}">
                                                <button class="accordion-button rounded-4 fs-2 h-70px  fw-bold " ng-style="{'background-color': getBackgroundColor($index)}"
                                                            type="button"
                                                            data-bs-toggle="collapse"
                                                            data-bs-target="#collapse{{subjectKey}}"
                                                            aria-expanded="false"
                                                            aria-controls="collapse{{subjectKey}}">
                                                        <div class="border-0 border-white border-dashed min-w-125px py-3 me-7 d-none d-md-flex">
                                                            <div class="fs-6 text-white fw-bold" ng-bind="assignmentsGroup.Subject.Value"></div>
                                                        </div>
                                                    </button>
                                                </h2>
                                                <div id="collapse{{subjectKey}}"
                                                     class="accordion-collapse collapse show "
                                                     aria-labelledby="heading{{subjectKey}}"
                                                 data-bs-parent="#accordionExample{{subjectKey}}">
                                                    <div class="accordion-body p-0">
                                                        <div class="mt-n1">
                                                            <!--begin::Table container-->
                                                            <div class="table-responsive w-100">
                                                                <table id="datatable_complex_header" class="table table-hover table-striped align-start gs-0 gy-4">
                                                                    <!--begin::Table head-->
                                                               

                                                                    <!--end::Table head-->
                                                                    <!--begin::Table body-->
                                                                    <tbody ng-repeat="group in assignmentsGroup.Assignments track by $index">
                                                                        @* <tbody> *@
                                                                        <tr class="table-text">
                                                                            <td class="rounded-cell rounded-4 rounded-end-0" style="text-align:center;">
                                                                                <span ng-bind="$index+1"></span>
                                                                            </td>
                                                                            <td>
                                                                                <a href="#" class="text-dark fw-bold text-hover-primary mb-1 fs-6">
                                                                                    <span ng-bind="group.StartDateString"></span>
                                                                                </a>
                                                                            </td>
                                                                            <td>
                                                                                <span ng-bind="group.Subject.Value"></span>
                                                                            </td>
                                                                            <td>
                                                                                <span ng-bind="group.Title"></span>
                                                                            </td>
                                                                            <td>
                                                                                <span ng-bind="group.SubmissionDateString"></span>
                                                                            </td>
                                                                            <td class="rounded-4 rounded-start-0">
                                                                            <button class="btn btn-primary btn-sm" ng-click="AssignmentViewClick(group)">View</button>
                                                                            </td>
                                                                        </tr>
                                                                    </tbody>
                                                                </table>
                                                                <ul class="pagination" ng-if="totalPages > 1">
                                                                    <li class="page-item" ng-class="{disabled: currentPage === 1}">
                                                                        <a class="page-link" ng-click="gotoPage(currentPage - 1)">Previous</a>
                                                                    </li>
                                                                    <li class="page-item" ng-repeat="page in pageNumbers track by $index" ng-class="{active: page === currentPage}">
                                                                        <a class="page-link" ng-click="gotoPage(page)">{{ page }}</a>
                                                                    </li>
                                                                    <li class="page-item" ng-class="{disabled: currentPage === totalPages}">
                                                                        <a class="page-link" ng-click="gotoPage(currentPage + 1)">Next</a>
                                                                    </li>
                                                                </ul>
                                                                <div class="alert alert-info text-center" ng-if="GroupedAssignmentList.length == 0 && !ShowPreLoader">
                                                                    <label>There is no details found!</label>
                                                                </div>
                                                            </div>
                                                            <!--end::Table-->
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                      


                                </div>

                                <!--begin::Table container-->
                           
                                <!--end::Table-->
                            </div>
                            <!--end::Body-->
                            <!--end::Card body-->
                        </div>
                        <!--end::Timeline Widget 1-->
                    </div>
                    <!--end::Col-->
                    <!--begin::Col-->
                    <div class="col-xl-4 mb-xl-10">

                        <!--begin::List widget 20-->
                        <div class="card h-xl-100">
                            <!--begin::Header-->
                            <div class="card-header border-0 pt-5">
                            </div>
                            <!--end::Header-->
                            <!--begin::Body-->
                            <div class="card-body pt-6">
                            </div>
                            <!--end::Body-->
                        </div>
                        <!--end::List widget 20-->
                    </div>
                    <!--end::Col-->

                </div>
                <!--end::Row-->

            </div>
            <!--end::Content container-->
        </div>
        <!--end::Content-->

    </div>
    <!--end::Content wrapper-->
</div>

