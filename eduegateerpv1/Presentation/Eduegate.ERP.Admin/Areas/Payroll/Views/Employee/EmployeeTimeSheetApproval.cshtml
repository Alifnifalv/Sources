@model Eduegate.Web.Library.HR.Payroll.EmployeeTimeSheetApprovalViewModel

@{ if (Request.IsAjaxRequest()) { Layout = null; }

    Random rnd = new Random();
    var windowName = "window_" + rnd.Next().ToString();
}

<div id="EmployeeTimeSheetApproval" class="windowcontainer" ng-controller="EmployeeTimesheetApprovalController" ng-init="Init(@Newtonsoft.Json.JsonConvert.SerializeObject(Model),'@windowName', 'employeeTimeSheetApproval')">

    <div class="main-page row g-0 g-xl-2 mb-5 mb-xl-10">
        <div class="col-md-12">
            <div class="app-toolbar">
                <div class="app-container  container-fluid d-flex align-items-stretch ">
                    <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                        <div class="page-title d-flex flex-column justify-content-center gap-1 me-3">
                            <h1 class="page-heading d-flex flex-column justify-content-center text-dark fw-bold fs-3 m-0">
                                Employee Time Sheet Approval
                            </h1>
                            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0">
                                <li class="breadcrumb-item text-muted">
                                    <a class="text-muted text-hover-primary">
                                        HR
                                    </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                                </li>
                                <li class="breadcrumb-item text-muted">
                                    Time Sheet
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <ul class="nav nav-tabs justify-content-center">
                <li class="nav-item" ng-click="onTimesheetViewTab('Tab_01')">
                    <a class="nav-link active" id="Tab_01_nav" aria-current="page" href="#"><span class="seletedsubject">Pending</span></a>
                </li>
                <li class="nav-item" ng-click="onTimesheetViewTab('Tab_02')">
                    <a class="nav-link" id="Tab_02_nav" href="#"><span class="seletedsubject">Approved</span></a>
                </li>
                <li class="nav-item" ng-click="onTimesheetViewTab('Tab_03')">
                    <a class="nav-link" id="Tab_03_nav" href="#"><span class="seletedsubject">Manual entry</span></a>
                </li>
            </ul>
        </div>

        <div class="scheduleWrapper innertab subject" id="Timesheet_Pending_Tab" style="display:block">
            @Html.Partial("_PendingTimeSheets")
        </div>

        <div class="scheduleWrapper innertab subject" id="Timesheet_Approved_Tab" style="display:none">
            @Html.Partial("_ApprovedTimeSheets")
        </div>

        <div class="scheduleWrapper innertab subject" id="Timesheet_Entry_Tab" style="display: none">
            @Html.Partial("_TimeSheetsManualEntry")
        </div>

    </div>
</div>