@using StackExchange.Profiling;
@{
    string cultureCode = "en";

    var smartlayout = Request.QueryString["layout"];
    var theme = Request.QueryString["theme"];

    if (ViewBag.CultureCode != null)
    {
        cultureCode = ViewBag.CultureCode;
    }

}

<html dir="@(cultureCode == "ar" ? "rtl" : "ltr")" lang="@cultureCode" ng-app="Eduegate.ERP.Admin" class="@(cultureCode == "ar" ? "Layout_ar" : "Layout_en")">
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<head>
    @{
        var clientName = new Eduegate.Domain.FrameworkSettingBL(null).GetSettingValue<string>("CLIENTINSTANCE");
    }
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@Eduegate.Framework.Extensions.ConfigurationExtensions.GetAppConfigValue("PortalTitle")</title>

    <link rel="apple-touch-icon" sizes="180x180" href="@Url.Content("~/Images/favicon.ico")" />
    <link rel="icon" type="image/png" sizes="192x192" href="@Url.Content("~/Images/favicon.ico")" />
    <link rel="shortcut icon" href="@Url.Content("~/Images/favicon.ico")" type="image/x-icon" />
    <script type="text/javascript">
        var CKEDITOR_BASEPATH = "@Url.Content("~/Scripts/ckeditor/")";
    </script>

    <script src="https://maps.google.com/maps/api/js?key=AIzaSyCRSaWFhHm9072tCsZZYOTQvw3U_hmy7Dw" type="text/javascript"></script>
    @Styles.Render("~/Content/css")

    @{
        if (theme == "blue")
        {
            @Styles.Render("~/Content/cssblue");
        }
        else
        {
            @Styles.Render("~/Content/cssgray");
        }
    }


    @*@Styles.Render("~/Content/cssblue")*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    <!-- The library to replace with your local copy of ng-weekly-scheduler -->
    <script src="@Url.Content("~/Scripts/ng-weekly-scheduler.js")"></script>
    <script src="@Url.Content("~/Scripts/daypilot-all.min.js")"></script>

    @Scripts.Render("~/bundles/appmodels")
    @Scripts.Render("~/bundles/plugins")
    @Scripts.Render("~/bundles/others")
    @Scripts.Render("~/bundles/jslinq")
    @Scripts.Render("~/bundles/highchart")

    <script src="~/Scripts/ng-map.min.js" type="text/javascript"></script>

    <script type="text/javascript">
        var _dateTimeFormat = '@Eduegate.Framework.Extensions.ConfigurationExtensions.GetAppConfigValue("DateTimeFormat")';
        var _dateFormat = '@Eduegate.Framework.Extensions.ConfigurationExtensions.GetAppConfigValue("DateFormat")';
    </script>

    @*this js will contain custom validation code*@


    <!--animate-->
    <link href="@Url.Content("~/Content/animate.css")" rel="stylesheet" type="text/css" />
    <link href="~/Content/cropper.css" rel="stylesheet">
    <link href="~/Content/dashboard.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="~/clients/@clientName/css/clientstyle.css" rel="stylesheet">

    <script src="@Url.Content("~/Scripts/wow.min.js")"></script>
    <script>
        new WOW().init();
    </script>

    <script src="@Url.Content("~/Scripts/Chart.js")"></script>

    <script src="~/Scripts/cropper.js"></script>
    <script src="~/Scripts/jquery-cropper.js"></script>
    @*<script src="@Url.Content("~/Scripts/cropper.js")"></script>*@
    <script src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")"></script>
    <script src="@Url.Content("~/signalr/hubs")"></script>
    <script src="~/Scripts/datatables.bundle.js"></script>
    <script src="~/Scripts/scripts.bundle.js"></script>
</head>

<body ng-controller="LayoutController" ng-init="Init('@smartlayout', '@Eduegate.ERP.Admin.Globalization.ResourceHelper.GetValue("Dashboard")');" dir="@(cultureCode == "ar" ? "rtl" : "ltr")">
    <div class="overlaydiv"></div>
    <div class="fluid-container" dir="@(cultureCode == "ar" ? "rtl" : "ltr")">
        <div id="Overlay" class="loaderoverlay">
            <div class="d-flex justify-content-center align-items-center vh-100">
            <div id="ButtonLoader"  class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            </div>
        </div>
        @Html.Partial("~/Views/Shared/_GlobalInfoMessage.cshtml")
        @Html.Partial("_Header")
        <div class="row">

            @if (smartlayout != "smart")
            {
                @Html.Partial("_LeftMenu")
            }

            <div class="leftnav-tree">
                <div id="SmartViewCotnainer" class="leftnav-treewrap"></div>
            </div>

            <main id="LayoutContentSection" role="main" class="ml-sm-auto" @(smartlayout == "smart" ? "smart-view" : "")">

                @if (smartlayout != "smart")
                {
                    <div class="topmenuwrap">
                        <div class="btncontrols-wrap">
                            <div class="buttonscrollleft btncontrols"><i class="fa fa-angle-left" aria-hidden="true"></i></div>
                            <div class="buttonscrollright btncontrols"><i class="fa fa-angle-right" aria-hidden="true"></i></div>
                        </div>
                        <div class="topmenuwrap-inner">
                            <ul class="bodyrightmain-tab">
                                <li class="tab-list" ng-repeat="windowtab in WindowTabs" ng-class="{active: $index==SelectedWindowIndex}"
                                    ng-click="SelectWindowTab($event,$index);">
                                    <div class="tab-list-blk">{{windowtab.Title}}</div>
                                    <i class="fa fa-close" ng-show="ShowClose($index);" ng-click="CloseWindowTab($index)"></i>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
                else
                {
                    <div ng-if="WindowCount > 0" class="pageClose" ng-click="CloseSmartWindow($event)">X</div>
                }

                @RenderBody()

                @*<div class="activityStream overlaySummaryView">
                        <div class="dockToggle"></div>
                        <div class="overlaySummaryInnerview">
                            @Html.Partial("~/Views/Shared/_ActivityStream.cshtml")
                            <div id="activityWayPoint" class="waypointLoading">
                                <center>
                                    <img src="~/Images/preloader.gif" />
                                </center>
                            </div>
                        </div>
                    </div>*@

            </main>

            <div id="dailogue" class="popup"></div>
            <div class="popup workFlow">
                <div class="popup-wrap">Test</div>
                <div class="popupPointer"></div>
            </div>


        </div>

    </div>

    <script type="text/javascript">
        utility.myHost = "@Eduegate.Framework.Extensions.ConfigurationExtensions.GetAppConfigValue("RootUrl")";
    </script>

    @MiniProfiler.RenderIncludes(position: RenderPosition.Right, showControls: true)
    <script>
        let x = document.querySelectorAll(".myDIV");
        for (let i = 0, len = x.length; i < len; i++) {
            let num = Number(x[i].innerHTML)
                .toLocaleString('en');
            x[i].innerHTML = num;
            x[i].classList.add("currSign");
        }
    </script>

</body>

</html>
