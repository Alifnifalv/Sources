@using Eduegate.Services.Contracts.Enums;
@model Eduegate.Framework.PageRendererEngine.ViewModels.BoilerPlateInfoViewModel
@{
    Random rnd = new Random();
    var windowName = "window_StudentFeeSummary";
    var documentTypeID = Model.GetParameterValue<string>("DocumentTypeID");
}

<div id="@windowName" class="card h-xl-100 rounded-2" template="_SK_StudentFeeSummary" ng-controller="DashboardController" ng-init="init(@Newtonsoft.Json.JsonConvert.SerializeObject(Model),'@windowName')">
    <script src="javascript/main.js"></script>

    <div id="Fee Summary">

        <div class="card-header border-0 pt-5 justify-content-start">

            <h3 class="card-title align-items-start flex-column">
                <span class="card-label fw-bold text-dark">Fee Summary</span>
               @*  <span class="text-muted mt-1 fw-semibold fs-7">Fee Outstanding Details</span> *@
            </h3>

        </div>

        <div class="card-body">
            <div id="FeeListOverlay" class="preload-overlay center">
                <span id="FeeListOverlayButtonLoader" class="preloadImg">
                    <img src="~/Images/preloader.GIF" alt="loader" />
                </span>
            </div>
        </div>
      @*   <div>
            <ul class="nav nav-tabs gap-1">

                <li class="nav-item" >
                    <a class="nav-link active ms-4" id="Tab_01_nav" aria-current="page" href="#Tab_01"><span class="seletedsubject">Fees</span></a>
                </li>

                <li class="nav-item" >
                    <a class="nav-link" id="Tab_02_nav" href="#Tab_02"><span class="seletedsubject">Fee Collection History</span></a>
                </li>


            </ul>
        </div> *@

        <div class="scheduleWrapper innertab subject active" id="Tab_01" style="display:block">

            <div id="FeeSummary">

                <div class="card-header border-0 pt-5 justify-content-start">

                    <h3 class="card-title align-items-start flex-column">
                        <span class="card-label fw-bold text-dark">Fee Due Summary</span>
                        <span class="text-muted mt-1 fw-semibold fs-7">Fee outstanding </span>
                    </h3>

                </div>
                <div class="card-body">
                    <div id="FeeListOverlay" class="preload-overlay center">
                        <span id="FeeListOverlayButtonLoader" class="preloadImg">
                            <img src="~/Images/preloader.GIF" alt="loader" />
                        </span>
                    </div>
                    <div class="card-header border-0 pt-5">
                        <div class="col-md-5 text-center">
                        </div>
                        <div class="col-md-5 text-center">
                        </div>
                        <div class="col-md-2 text-center">
                            <span class="editcolor" ng-click="FillFeeCollection(0);">
                                <i class="fa fa-edit" aria-hidden="true" title="View/Edit Student Info"></i>
                            </span>
                            <span class="editcolor" ng-click="FillInvoice(0);">
                                <i class="fa fa-refresh" aria-hidden="true" title="Refresh Student Info"></i>
                            </span>
                        </div>
                    </div>
                    <div class="alert alert-info text-center" ng-if="!ShowPreLoader && (FeeTypes == null || FeeTypes.length == 0)">
                        <b>There is no fee dues found!</b>
                    </div>
                    <div class="fullcolumn-layout" ng-if="FeeTypes != null && FeeTypes.length > 0">

                        <div class="fullWidth displaylineBlock text-right">
                            <div class="displaylineBlock totalAmount">
                                <span class="label displaylineBlock"> Total amount to be paid:</span>
                                <span class="displaylineBlock currSign" ng-bind="FeeDueDetails.NowPaying|number:2"></span>
                            </div>
                        </div><br />
                        <div class="table-responsive table-responsive-custom mh-500px">
                            <table id="GridTable" class="table table-striped table-bordered table-hover table-checkable order-column valign-middle">
                                <thead>
                                    <tr>
                                        <th class="medium-col-width">Invoice No</th>
                                        <th>Invoice Date</th>
                                        <th>Fee Type</th>
                                        <th>Fee Period</th>
                                        <th class="text-right">Amount</th>
                                        <th class="w130 text-right"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat-start="gridModel in FeeTypes track by $index" class="ng-scope" ng-if="gridModel.Amount != 0">
                                        <td class="medium-col-width">
                                            <span ng-bind="gridModel.InvoiceNo" class="ng-binding"></span>
                                        </td>
                                        <td class="medium-col-width">
                                            <span ng-bind="gridModel.InvoiceStringDate" class="ng-binding"></span>
                                        </td>
                                        <td>
                                            <span ng-bind="gridModel.FeeMaster.Value" class="ng-binding"></span>
                                        </td>
                                        <td>
                                            <span ng-bind="gridModel.FeePeriod.Value" class="ng-binding"></span>
                                        </td>
                                        <td class="text-right">
                                            <span ng-bind="gridModel.Amount|number:2" class="ng-binding currSign"></span>
                                        </td>
                                        <td class="text-right">
                                            <div class="controls text-right" ng-click="ExpandCollapase($event, gridModel,'IsExpand')" ng-if="gridModel.FeeDueMonthlySplit.length > 0">
                                                <span class="gridBtn pointer" ng-if="!gridModel.IsExpand"><i class="fa fa-eye" aria-hidden="true" title="View Details"></i></span>
                                                <span class="gridBtn active pointer" ng-if="gridModel.IsExpand"><i class="fa fa-eye-slash" aria-hidden="true" title="Hide Details"></i></span>
                                            </div><!--controls-->
                                        </td>
                                    </tr>
                                    <tr class="toggleGrid" ng-show="gridModel.IsExpand" style="display:table-row">
                                        <td colspan="6" ng-if="!gridModel.FeeDueMonthlySplit.length" class="noPaddingLeft noPaddingRight">
                                            <span class="alert alert-info displayBlock noMarginBtm text-center">
                                                <b>No details found!</b>
                                            </span>
                                        </td>
                                        <td class="feeStructure noPadding" colspan="6" ng-if="gridModel.FeeDueMonthlySplit.length > 0">
                                            <table class="table table-striped table-bordered table-hover table-checkable order-column valign-middle">
                                                <thead>
                                                    <tr>
                                                        <th>Month Year</th>
                                                        <th class="text-right">Amount</th>
                                                        <th class="text-right">Credit Note</th>
                                                        <th class="text-right">Balance</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr ng-repeat-start="gridModel in gridModel.FeeDueMonthlySplit track by $index" class="ng-scope">
                                                        <td>
                                                            <span ng-bind="gridModel.MonthName" class="ng-binding"></span>
                                                            <span ng-bind="gridModel.Year" class="ng-binding"></span>
                                                        </td>
                                                        <td class="text-right">
                                                            <span ng-bind="gridModel.TotalAmount|number:2" class="ng-binding currSign"></span>
                                                        </td>
                                                        <td class="text-right">
                                                            <span ng-bind="gridModel.CreditNote|number:2" class="ng-binding currSign"></span>
                                                        </td>
                                                        <td class="text-right">
                                                            <span ng-bind="gridModel.NowPaying|number:2" class="ng-binding currSign"></span>
                                                        </td>
                                                    </tr>
                                                    <tr ng-repeat-end="" class="ng-scope"></tr>
                                                </tbody>
                                            </table>
                                        </td>
                                    </tr>
                                    <tr ng-repeat-end="" class="ng-scope"></tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="scheduleWrapper innertab subject" id="Tab_02" style="display:block">
            @await Html.PartialAsync("_SK_FeeHistory")
        </div>

    </div>


</div>
