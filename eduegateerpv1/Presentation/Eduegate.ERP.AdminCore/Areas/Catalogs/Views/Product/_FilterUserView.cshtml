@model List<Eduegate.Services.Contracts.Search.ColumnDTO>
<div ng-show="false" ng-controller="UserViewFilterController as userViewFilter" class="filterdropdown ui-draggable ui-draggable-handle" id="filterview">
    <div class="filterheader">
        <ul>
            <li style="float:left;">Filter/Create New View</li>
            <li style="float:right;vertical-align:middle;">
                <button id="close-filter" value="Submit" form="nameform" type="submit" class="close-filter"><i ng-click="CloseFilterView();" class="fa fa-close"></i></button>
            </li>
            <li style="float:right;vertical-align:middle;">
                <button value="Close" form="nameform" type="submit" class="close-pin" id="close-pin"><i class="pin fa"></i></button>
            </li>
        </ul>
    </div>
    <div style="padding: 10px 25px 15px;">
        <div class="filter-arrow"><i class="fa fa-caret-up"></i></div>
        <ul>

            @foreach (var header in @Model)
            {
                <li>
                    <input type="checkbox" id="@header.ColumnName" data-role="none" value="@header.ColumnName" 
                           ng-checked="userViewFilter.selection.indexOf('@header.ColumnName') > -1" ng-click="userViewFilter.toggleSelection('@header.ColumnName')"><label for="@header.ColumnName" class="">@header.Header</label>
                </li>
            }
            <li>
                <div align="center" class=""><button value="Create View" form="nameform" type="button" class="filtersubmitbutton-style">Create View</button></div>
                <div align="center" class=""><button value="Cancel" form="nameform" type="button" class="filtersubmitbutton-style">Cancel</button></div>
            </li>
        </ul>
    </div>
</div>
