@{
    if (Context.Request.Headers["X-Requested-With"] == "XMLHttpRequest")
    {
        Layout = null;
    }

    Random rnd = new Random();
    var windowName = "window_" + rnd.Next().ToString();

    ViewData["Title"] = "Table Information";
    // var tables = ViewBag.Tables;
}

<div id="TableSchedule" class="settings" ng-controller="DataManagementController" ng-init="Init(@Newtonsoft.Json.JsonConvert.SerializeObject(Model),'@windowName', 'ArchiveSchedule')">
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">All Schedules </h2>
        </div>
        <div class="card-body">
            <div class="settings-sublist toggleview">
                <h4 class="settings-subtitle active" ng-click="TitleClick($event)">Schedule Tables</h4>
                <div class="sublist-grid fullwidth alignleft" style="display: block;">
                    <table cellpadding="0" cellspacing="0" class="grid">
                        <thead>
                            <tr>
                                <th class="textleft">SL. No.</th>
                                <th class="textleft">Table Name</th>
                                @* <th class="textleft">Created Date</th> *@
                                <th class="textleft">Scheduled Date</th>
                                <th class="textleft">Status</th>
                                <th class="textcenter">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="table in ScheduledTables | filter:{ActionTypeName:'ArchiveTable'} track by $index">
                                <td class="textleft">
                                    {{ $index + 1 }}
                                </td>
                                <td class="textleft">
                                    {{ table.Description }}
                                </td>
@*                                 <td class="textleft">
                                    {{ table.CreatedDateString }}
                                </td> *@
                                <td class="textleft">
                                    {{ table.EnqueueDateString }}
                                </td>
                                <td class="textleft" ng-class="{ 'gridstatus green' : table.ActionStatusName == 'Completed' , 'gridstatus yellow' : table.ActionStatusName == 'Scheduled' , 'gridstatus red' : table.ActionStatusName == 'Deleted'}">
                                    {{ table.ActionStatusName }}
                                </td>
                                <td class="textcenter">
                                    <input type="hidden" id="jobID" name="jobID" value="{{table.ActivityID}}">
                                    <button type="button" class="btn btn-primary btn-sm" ng-disabled="table.ActionStatusName != 'Scheduled'" ng-click="DeleteSchedules()">Delete</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="settings-sublist toggleview">
                <h4 class="settings-subtitle active" ng-click="TitleClick($event)">Schedule Database</h4>
                <div class="sublist-grid fullwidth alignleft" style="display: block;">
                    <table cellpadding="0" cellspacing="0" class="grid">
                        <thead>
                            <tr>
                                <th class="textleft">SL. No.</th>
                                <th class="textleft">Database Name</th>
                                @* <th class="textleft">Created Date</th> *@
                                <th class="textleft">Scheduled Date</th>
                                <th class="textleft">Status</th>
                                <th class="textcenter">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="table in ScheduledTables | filter:{ActionTypeName:'BackupDB'} track by $index">
                                <td class="textleft">
                                    {{ $index + 1 }}
                                </td>
                                <td class="textleft">
                                    {{ table.Description }}
                                </td>
                                @*                                 <td class="textleft">
                                {{ table.CreatedDateString }}
                                </td> *@
                                <td class="textleft">
                                    {{ table.EnqueueDateString }}
                                </td>
                                <td class="textleft" ng-class="{ 'gridstatus green' : table.ActionStatusName == 'Completed' , 'gridstatus yellow' : table.ActionStatusName == 'Scheduled' , 'gridstatus red' : table.ActionStatusName == 'Deleted'}">
                                    {{ table.ActionStatusName }}
                                </td>
                                <td class="textcenter">
                                    <input type="hidden" id="jobID" name="jobID" value="{{table.ActivityID}}">
                                    <button type="button" class="btn btn-primary btn-sm" ng-disabled="table.ActionStatusName != 'Scheduled'" ng-click="DeleteSchedules()">Delete</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>


    <div id="globalPopup" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete scheduling</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" ng-click="CancelModify()">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete scheduling of this table? </p>
                    <button class="btn btn-primary" ng-click="ConfirmDeleteSchedules()">Confirm</button>
                    <button class="btn btn-secondary" ng-click="CancelModify()">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .card {
        border: 1px solid #ddd; /* Adjust border style and color as desired */
    }

    .toggleview {
        box-shadow: 0 10px 10px rgba(0,0,0,0.19), 0 2px 2px rgba(0,0,0,0.23);
        background: #fff;
        color: #333;
    }

        .toggleview .settings-subtitle {
            border: 1px solid #fff;
            padding: 10px 10px 10px 30px;
            float: left;
            width: 100%;
            background: #f5f5f5;
            color: #333;
            border-radius: 4px;
            margin: 0;
            font-weight: normal;
        }

            .toggleview .settings-subtitle.active, .toggleview .settings-subtitle:hover {
                background: linear-gradient(to right, #f5f5f5 0%, #e2e2e2 100%);
            }

            .toggleview .settings-subtitle.active {
                margin-bottom: 0;
            }

    .toggleview {
        margin-bottom: 6px;
        color: #333;
    }

        .toggleview .settings-subtitle:before {
            top: 8px;
            font-weight: normal;
            left: 8px;
        }
</style>