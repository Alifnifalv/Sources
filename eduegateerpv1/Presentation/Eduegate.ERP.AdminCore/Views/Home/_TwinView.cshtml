@model Eduegate.Web.Library.ViewModels.SearchListViewModel

@{
    if (Context.Request.Headers["X-Requested-With"] == "XMLHttpRequest")
    {
        Layout = null;
    }
    // Layout = null;
    Random rnd = new Random();
    var windowName = "window_" + rnd.Next().ToString();

    var referencID = ViewBag.referencID;
    var imageContentID = ViewBag.imageContentID;
    var combinedData = new { referenceID = ViewBag.referenceID, imageContentID = ViewBag.imageContentID };
    var serializedData = Newtonsoft.Json.JsonConvert.SerializeObject(combinedData);

}

<html>
<head ng-app="TwinView">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <style>
        .popover {
            position: absolute;
            background: #fff;
            border: 1px solid #ccc;
            padding: 5px;
            z-index: 1000;
            border-radius: 5px;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);
            pointer-events: none; /* Ensures it doesn't interfere with the graph */
        }
    </style>
    <style>
        #cy {
            width: 100%;
            height: 100vh;
            font-family: Poppins !important;
        }

        input {
            border: 1px solid #000; width: 200px;
            padding: 5px;
           
        }
        #nodeSearch {
            margin: 10px;
            padding: 5px;
            width: 90%;
            font-size: 16px;
        }
    </style>
</head>
<body>

    <div id="TwinView" class="windowcontainer" ng-controller="StudentJourneyController" ng-init="Init(@Newtonsoft.Json.JsonConvert.SerializeObject(serializedData),'@windowName')">
        <div class="search_box d-none d-lg-flex z-index-3" >
            <div  class="d-flex fullheight ">
                <div  style="display:flex;">
                    <div>
                        <input type ="text" ng-model="searchQuery" ng-change="searchNodes(searchQuery)" placeholder="Search...">
                    </div>
                    <button class="btn" ng-click="clearSearch()"><i class="fa fa-search text-gray-100" aria-hidden="true"></i></button>
                </div>
            </div>
        </div>
@*         <input type="text"  ng-model="searchQuery" ng-change="searchNodes(searchQuery)" placeholder="Search..." />
        <button  ng-click="clearSearch()">Clear Search</button> *@
        <div id="cy"></div>
       
        <div class="popover" ng-show="ctrl.isPopoverVisible" ng-style="ctrl.popoverStyle">
            <h3>{{ctrl.nodeData.label}}</h3>
            <button ng-click="ctrl.closePopover()">Close</button>
        </div>
      
    </div>
    <script>
        var app = angular.module('Eduegate.ERP.Admin')
        function searchNode() {
            const query = document.getElementById('nodeSearch').value.toLowerCase();

            cy.nodes().forEach(node => {
                const label = node.data('label').toLowerCase();

                if (label.includes(query)) {
                    node.style({
                        'border-color': '#ff0000',
                        'border-width': 6
                    });
                    cy.center(node);
                } else {
                    node.style({
                        'border-color': '#000',
                        'border-width': 3
                    });
                }
            });
        }

    </script>
</body>
</html>