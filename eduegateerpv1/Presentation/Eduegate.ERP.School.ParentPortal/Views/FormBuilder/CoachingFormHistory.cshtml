
@{
    ViewBag.Title = "CoachingFormHistory";
}

<div class="bg-light d-flex flex-column" style="flex:1;" ng-controller="CoachingFormListController" ng-init="init()">

    <section class="home-section-wrap">
        <div class="container">
            <div class="row row-eq-height">
                <!-- Nav tabs -->
                <!-- Tab panes -->

                <div class="p-md-sm-0  fontawesome-demo">
                    <div class="container-custom container-xxl d-flex flex-column-fluid  p-md-sm-0">
                        <div class="content d-flex flex-row flex-row-fluid" id="kt_content">
                            <div class="d-flex flex-column flex-row-fluid">
                                <div class="d-flex flex-stack flex-wrap gap-2 mt-n1 mb-6" id="kt_toolbar">
                                    <div class="page-title d-flex flex-column align-items-start me-3 py-2 py-lg-0 gap-2">
                                        <h1 class="d-flex text-dark fw-bold m-0 fs-3" ng-click="loadMessages()">Application history</h1>
                                        <ul class="breadcrumb breadcrumb-dot fw-semibold text-gray-600 fs-7">
                                            <li class="breadcrumb-item text-gray-600">
                                                <a class="text-gray-600 text-hover-primary" href="MyWards">Home</a>
                                            </li>
                                            <li class="breadcrumb-item text-gray-500">Application history</li>
                                        </ul>
                                    </div>
                                    <div class="d-flex align-items-center py-2">
                                        <a class="btn btn-sm btn-primary" ng-click="NewCoachingFormButtonClick()">Create application</a>
                                    </div>
                                </div>
                                <div class="flex-column-fluid">
                                    <div class=" g-5 g-lg-8 mb-5 mb-xl-0">
                                        <div class="table-responsive table-responsive-custom">
                                            <table class="table table-striped table-bordered table-hover table-checkable order-column valign-middle">
                                                <thead>
                                                    <tr>
                                                        @*<th>Application no.</th>*@
                                                        <th>Applied date</th>
                                                        <th>Student</th>
                                                        <th>Status</th>
                                                    </tr>
                                                </thead>
                                                <tbody>

                                                    <tr ng-repeat="form in StudentsCoachingForms">
                                                        @*<td>
                                                            <span>
                                                                <b style="color:darkslategray">App 1</b>
                                                            </span>
                                                        </td>*@
                                                        <td>
                                                            <span>{{form.AppliedDateString}}</span>
                                                        </td>
                                                        <td>
                                                            <span>{{form.StudentName}}</span>
                                                        </td>
                                                        <td>
                                                            <span style="color:darkorange">{{form.ApplicationStatus}}</span>
                                                        </td>
                                                    </tr>

                                                    <tr ng-if="StudentsCoachingForms.length == 0 && !ShowPreLoader">
                                                        <td colspan="6"> <p class="text-center">No request found.</p></td>
                                                    </tr>

                                                </tbody>
                                            </table>
                                            <div id="CoachingFormListOverlay" class="preload-overlay center">
                                                <span id="CoachingFormListOverlayButtonLoader" class="preloadImg">
                                                    <img src="~/Images/preloader.gif" alt="loader" />
                                                    <br /><label>Loading...</label>
                                                </span>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row gy-5 g-xl-10">
                        <div class="col-xl-4 mb-5 mb-xl-10">
                        </div>

                    </div>
                </div>

            </div><!--pageContent-->
        </div><!--pageContainer-->
    </section>
</div>
