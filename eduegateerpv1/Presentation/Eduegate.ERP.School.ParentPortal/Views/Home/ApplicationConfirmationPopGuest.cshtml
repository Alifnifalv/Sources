@{
    ViewBag.Title = "ApplicationConfirmationPopGuest";
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
}
<br />
<div ng-controller="LayoutHeaderController">

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .alert {
            padding: 20px;
            background-color: #f44336;
            color: white;
        }

        .closebtn {
            margin-left: 15px;
            color: white;
            font-weight: bold;
            float: right;
            font-size: 22px;
            line-height: 20px;
            cursor: pointer;
            transition: 0.3s;
        }

            .closebtn:hover {
                color: black;
            }
    </style>
    <div class="alert" id="ApplicationListClickFromPopUPGuest">
        <span class="closebtn" onclick="this.parentElement.style.display='none';" ng-click="ApplicationListClickFromPopUPGuest()">&times;</span>
        <strong>Please Check!</strong> whether the application is submitted before for this student.
    </div>
</div>
