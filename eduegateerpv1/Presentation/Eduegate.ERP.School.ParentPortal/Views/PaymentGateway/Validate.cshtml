
@{
    Layout = "~/Views/Shared/_LayoutPayment.cshtml";
    ViewBag.Title = "Validate Payment";
}

<div class="d-flex flex-column" style="flex:1;" ng-controller="PaymentGatewayStatusController" ng-init="Init('Validate')">

    <div class="modal " id="paymentValidateAlert" tabindex="-1" aria-labelledby="paymentValidateAlertLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog w-md-400px modal-dialog-centered">
            <div class="modal-content animate__animated animate__zoomIn rounded-4" style="text-align: center; align-items: center;">

                <div style="background-color:#ffffff;  border-radius: 24px; margin:40px 40px; max-width: 600px;">
                    <p></p><table align="center" border="0" cellpadding="0" cellspacing="0" width="100%" height="auto" style="border-collapse:collapse">
                        <tbody>
                            <tr>
                                <td align="center" valign="center" style="text-align:center; padding-bottom: 10px">
                                    <!--begin:Email content-->
                                    <div style="text-align:center;">
                                        <!--begin:Logo-->
                                        <div class="mb-10">
                                            <a rel="noopener" target="_blank">
                                                <img alt="Logo" src="~/img/PODARLOGO-01.png" style="height: 35px">
                                            </a>
                                        </div>
                                        <!--end:Logo-->
                                        <!--begin:Media-->
                                        <div class="d-flex justify-content-center mb-10" ng-if="IsShowLogoLoader">
                                            <ul class="loadingclass position-relative m-0 start-0 top-0" style="margin-bottom: 0px; padding-left: 0px; width: 52px; height: 52px;">
                                                <li>
                                                    <div>
                                                        <div class="paymentLoader frontPanel"></div>
                                                        <img class="loaderimage" src="../img/logo_loader.png">
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                        <!--end:Media-->
                                        <!--begin:Text-->
                                        <div style="font-size: 14px; font-weight: 500; font-family:Arial,Helvetica,sans-serif;">
                                            <p style="margin-bottom:9px; color:#181C32; font-size: 22px; font-weight:700">Processing Your Request</p>
                                            <p style="margin-bottom:2px; color:#7E8299">
                                                Please Wait,  Don't Refresh
                                            </p>
                                        </div>
                                        <!--end:Text-->
                                        <!--begin:Text-->
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>