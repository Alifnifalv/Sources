        //Disable Back Button In All Browsers.
             function DisableBackButtonAllBrowsers() {
                 window.history.forward()
             };
              DisableBackButtonAllBrowsers();
             window.onload = DisableBackButtonAllBrowsers;
              window.onpageshow = function (evts) { if (evts.persisted) DisableBackButtonAllBrowsers(); };
             window.onunload = function () { void (0) };
         </script>*@

    <style>
        #ResetPasswordStep_02, #ResetPasswordStep_03 {
            display: none;
        }

        .inputFields {
            padding: 0rem .5rem !important;
        }

        .control-label {
            padding-left: .5rem !important;
            padding-bottom: .5rem !important;
            text-align: left !important;
        }
    </style>
    <script>
        $("#frmResetPassword").submit(function (event) {
            if (model.Password != null && model.Password != "") {
                $("#LoginOverlay").show();
                $(".preload-overlay").show();
                if (isOTPverify == true) {

                    $("#submit").trigger('click');
                }
                else {
                    event.preventDefault();
                    $(".preload-overlay").hide();
                }
        });
    </script>
</body>
</html>