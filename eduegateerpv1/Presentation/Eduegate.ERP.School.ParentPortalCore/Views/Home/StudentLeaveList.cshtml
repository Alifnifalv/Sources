<div data-attr="Leave" class="featureContent noPaddingLeft noPaddingRight active" ng-cloak>
    <div id="LeaveListOverlay" class="preload-overlay center">
        <span id="LeaveListOverlayButtonLoader" class="preloadImg">
            <img src="~/Images/preloaderWhite.gif" alt="loader" />
        </span>
    </div>
    <div class="card-content">
        <div class="alert alert-info text-center" ng-if="!ShowPreLoader && StudentLeaveApplications.length == 0">
            <b> No Leave Application Found.</b>
        </div>
    </div>

    <div class="full-column-layout" ng-if="StudentLeaveApplications != null && StudentLeaveApplications.length > 0">
        <div class="table-responsive table-responsive-custom">
            <table style="width:100%" class="table table-striped table-bordered table-hover table-checkable order-column valign-middle">
                <thead>
                    <tr>
                        <th>Application No</th>
                        <th>Reason</th>
                        <th>Apply Date</th>
                        <th>Status</th>
                        <th>Remarks</th>
                        <th class="col-lg-1">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="studentLeaveApplication in StudentLeaveApplications">
                        <td ng-bind="studentLeaveApplication.LeaveAppNumber"></td>
                        <td ng-bind="studentLeaveApplication.Reason"></td>
                        <td ng-bind="studentLeaveApplication.CreatedDateString"></td>
                        <td >
                            <span class="badge badge-light-success" ng-bind="studentLeaveApplication.StudentLeaveStatus"></span>
                        </td>
                        <td ng-bind="studentLeaveApplication.Remarks"></td>
                        <td align="center">
                            <span ng-if="studentLeaveApplication.LeaveStatusID !=2 && studentLeaveApplication.LeaveStatusID !=3 " ng-hide="edit">
                                <a data-toggle="pill" ng-click="EditLeaveRequestClick(studentLeaveApplication.StudentLeaveApplicationIID)"><span class="edit"><i class="material-icons small" title="edit">edit</i></span></a>
                            </span>
                            <a href="DeleteLeaveApplication?Id={{studentLeaveApplication.StudentLeaveApplicationIID}}">
                                <span class="delete" ng-if="studentLeaveApplication.LeaveStatusID !=2 && studentLeaveApplication.LeaveStatusID !=3 " ng-hide="delete" ng-click="Delete(studentLeaveApplication.StudentLeaveApplicationIID)"><i class="material-icons small" title="delete">delete</i> </span>
                            </a>
                            @*</div>*@
                        </td>
                    </tr>
                </tbody>
            </table>
            </div>
        </div>
    </div>
