@{
    ViewBag.Title = "ClassTeacherDetails";
}
<div class="d-flex flex-stack flex-wrap gap-2 mt-n1 mb-6">
    <div class="page-title d-flex flex-column align-items-start me-3 py-2 py-lg-0 gap-2">
        <h1 class="d-flex text-dark fw-bold m-0 fs-3">Teacher</h1>
        <ul class="breadcrumb breadcrumb-dot fw-semibold text-gray-600 fs-7">
            <li class="breadcrumb-item text-gray-600">
                <a class="text-gray-600 text-hover-primary">Home</a>
            </li>
            <li class="breadcrumb-item text-gray-600">Ward</li>
            <li class="breadcrumb-item text-gray-500">Teacher</li>
        </ul>
    </div>
</div>
<div class="flex-column-fluid">
    <div id="TeacherListOverlay" class="preload-overlay center">
        <span id="TeacherListOverlayButtonLoader" class="preloadImg">
            <img src="~/Images/preloaderWhite.GIF" alt="loader" />
        </span>
    </div>
    <hr class="noMargin" ng-if="classTeacherDetail.length == 0" />
    <div class="table-responsive table-responsive-custom">
        <table ng-if="!ShowPreLoader" style="width:100%" class="table table-striped table-bordered table-hover table-checkable order-column valign-middle">
            <thead>
                <tr>
                    <th></th>
                    <th> Name </th>
                    <th> Subject </th>
                    @*<th> Gender </th>*@
                    @*<th> Degree </th>
                    <th> Action </th>*@
                </tr>
            </thead>
            <tbody>
                @*class="odd gradeX"*@
                <tr ng-repeat="classTeacherDetail in TeacherDetails">
                    <td class="">
                            <div id="profile-header" class=" w-100 header-wrapper fileOnlyHeader-23hdD">
                                <div class="header-wrapper-inner py-0">
                                    <div class="resume-header-wrapper bg-transparent">
                                        <div class="resume-header grid-container p-0">
                                            <div class="grid-row m-0">
                                                <div class="grid-col-md-8 grid-fill-height is-file-only-width overflow-auto">
                                                    <div class="header-text  flex-column p-0 bg-transparent">
                                                        <div class="avatar-outer fs-mask mb-3">
                                                            <div class="avatar-container border-0 avatar-css horizontal position-relative overflow-hidden">
                                                                
                                                                <img ng-src="/Content/ReadContentsByID?contentID={{classTeacherDetail.EmployeePhoto}}" onerrorsrc="/Images/unknown.png"
                                                                     style="background-size:cover;background-repeat:no-repeat;top:0;"
                                                                     class="position-absolute w-100" />

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                    </td>
                    <td ng-bind="classTeacherDetail.Employee.Value"></td>
                    <td class="left" ng-bind="classTeacherDetail.SubjectName"></td>
                    @*<td class="left" ng-bind="classTeacherDetail.Description"></td>*@
                    @*<td class="left">
                        <div ng-if="classTeacherDetail.HighestAcademicQualitication" ng-bind="classTeacherDetail.HighestAcademicQualitication"></div>
                        <div ng-if="!classTeacherDetail.HighestAcademicQualitication" class="text-center">-</div>
                    </td>
                    <td>
                        <a onclick="ComposeMailToggle()"
                           class="btn btn-success btn-xs">
                            <i class="fa fa-envelope"></i>
                        </a>
                    </td>*@
                </tr>
            </tbody>
            <tfoot ng-if="TeacherDetails.length == 0">
                <tr>
                    <td colspan="6"><p class="text-center">No Teacher Details found.</p></td>
                </tr>
            </tfoot>

        </table>
    </div>
</div>
<div class="row gy-5 g-xl-10">

    <!--begin::Col-->
    <div class="col-xl-4 mb-5 mb-xl-10">
        <!--begin::Engage widget 1-->
        <!-- END BEGIN PROFILE SIDEBAR -->
        <!-- BEGIN PROFILE CONTENT -->
        <!--end::Engage widget 1-->
    </div>
    <!--end::Col-->
</div>
