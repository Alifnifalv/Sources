@{
    ViewBag.Title = "StudentTransportRequestList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="StudentTransportRequestListOverlay" class="preload-overlay center">
    <span id="StudentTransportRequestListOverlayButtonLoader" class="preloadImg">
        <img src="~/Images/preloader.gif" alt="loader" />
        <br /><label>Loading...</label>
    </span>
</div>

<div class="bg-light d-flex flex-column" style="flex:1;" ng-controller="StudentTransportRequestListController" ng-init="init('','')">
    <section class="home-section-wrap">
        <div class="container">
            <div class="row row-eq-height">
                <!-- Nav tabs -->
                <!-- Tab panes -->

                <div class="p-md-sm-0  fontawesome-demo">
                    <div class="container-custom container-xxl d-flex flex-column-fluid  p-md-sm-0">
                        <div class="content d-flex flex-row flex-row-fluid" id="kt_content">
                            <div class="d-flex flex-column flex-row-fluid">
                                <div class="d-flex flex-stack flex-wrap gap-2 mt-n1 mb-6" id="kt_toolbar">
                                    <div class="page-title d-flex flex-column align-items-start me-3 py-2 py-lg-0 gap-2">
                                        <h1 class="d-flex text-dark fw-bold m-0 fs-3" ng-click="loadMessages()">Transport Application List</h1>
                                        <ul class="breadcrumb breadcrumb-dot fw-semibold text-gray-600 fs-7">
                                            <li class="breadcrumb-item text-gray-600">
                                                <a class="text-gray-600 text-hover-primary" href="~/Home/MyWards">Home</a>
                                            </li>
                                            <li class="breadcrumb-item text-gray-500">Transport Application List</li>
                                        </ul>
                                    </div>
                                    <div class="d-flex align-items-center py-2">
                                        <a class="btn btn-sm btn-primary" href="TransportApplicationClick?Id={{0}}">New Transport Request</a>
                                    </div>
                                </div>
                                <div class="flex-column-fluid">
                                    <div class=" g-5 g-lg-8 mb-5 mb-xl-0">
                                        <div class="table-responsive table-responsive-custom">
                                            <table class="table table-striped table-bordered table-hover table-checkable order-column valign-middle">
                                                <thead>
                                                    <tr>
                                                        <th>Applied Date</th>
                                                        <th>Application No.</th>
                                                        <th>Admission No.</th>
                                                        <th>Student Name</th>
                                                        <th>Contact No.</th>
                                                        <th>Start Date</th>
                                                        <th>Status</th>
                                                        <th>Remarks</th>
                                                        @*<th></th>*@
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr ng-repeat="application in Applications">
                                                        <td> 
                                                            <span>{{application.CreatedDate | date:'dd/MM/yyyy'}}</span> 
                                                        </td>
                                                        <td><b style="color:darkslategray">{{application.ApplicationNumber}}</b></td>
                                                        <td><b>{{application.AdmissionNumber}}</b></td>
                                                        <td>
                                                            {{application.FirstName}}&nbsp;{{application.MiddleName}}&nbsp;{{application.LastName}}
                                                        </td>
                                                        <td ng-bind="application.ContactNumber"></td>
                                                        <td> 
                                                            <span>{{application.StartDate | date:'dd/MM/yyyy'}}</span> 
                                                        </td>
                                                        <td> <span style="color:darkorange">{{application.ApplicationStatus}}</span> </td>
                                                        <td> {{application.Remarks}} </td>
                                                        <td>
                                                            <a href="TransportApplicationClick?Id={{application.TransportApplctnStudentMapIID}}">
                                                                <span class="edit" ng-if="application.TransportApplcnStatusID != 4 && application.TransportApplcnStatusID != 3 && application.TransportApplcnStatusID != 5" ng-hide="edit"><i class="material-icons small" title="edit">edit</i></span>
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a ng-click="CancelTransportApplication(application)">
                                                                <span class="cancelBtn" ng-if="application.TransportApplcnStatusID != 4 && application.TransportApplcnStatusID != 3 && application.TransportApplcnStatusID != 5" ng-hide="cancelBtn" ng-click="Cancel(application.TransportApplctnStudentMapIID)"><i class="material-icons small" title="cancel request">cancel</i> </span>
                                                            </a>
                                                        </td>
                                                        <!--<td align="center">-->
                                                        @*<span ng-if="studentLeaveApplication.LeaveStatusID !=2 && studentLeaveApplication.LeaveStatusID !=3 " ng-hide="edit">
            <a data-toggle="pill" ng-click="EditLeaveRequestClick(studentLeaveApplication.StudentLeaveApplicationIID)"><span class="edit"><i class="material-icons small" title="edit">edit</i></span></a>
        </span>*@
                                                        <!--<a href="DeleteTransportApplication?Id={{application.TransportApplctnStudentMapIID}}">
        <span class="delete" ng-if="application.TransportApplcnStatusID != 3" ng-hide="delete" ng-click="Delete(application.TransportApplctnStudentMapIID)"><i class="material-icons small" title="delete">delete</i> </span>
    </a>-->
                                                        @*</div>*@
                                                        <!--</td>-->
                                                    </tr>
                                                    <tr ng-if="Applications.length == 0">
                                                        <td colspan="6"> <p class="text-center">No application found.</p></td>
                                                    </tr>
                                                </tbody>
                                            </table>


                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row gy-5 g-xl-10">
                        <div class="col-xl-4 mb-5 mb-xl-10">
                        </div>

                    </div>
                </div>

            </div><!--pageContent-->
        </div><!--pageContainer-->
    </section>
</div>

<script>
    $('[data-toggle=confirmation]').confirmation({
        rootSelector: '[data-toggle=confirmation]'
    });
</script>
