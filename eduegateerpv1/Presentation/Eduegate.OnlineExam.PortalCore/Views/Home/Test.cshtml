@{
    ViewBag.Title = "Test";
    var ExamTests = ViewBag.ExamTestList;
}

<div class="content-part">
    <div class="card">
        <div class="card-body">
            <main class="col-md-12">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Pending Tests</h1>
                </div>
            </main>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>SL/NO</th>
                        <th>Exam Name</th>
                        <th>Duration</th>
                        <th>Additional Time</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int index = 1;
                        foreach (var test in ExamTests)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@test.OnlineExamName</td>
                                <td>@test.Duration</td>
                                <td>@test.AdditionalTime</td>
                                <td><a href="~/Home/Questions?examID=@test.OnlineExamID" class="btn btn-primary">Start</a> </td>
                            </tr>
                            index++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>