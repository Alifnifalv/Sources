@{
    ViewBag.Title = "Meeting Request List";
}

<div ng-controller="MeetingRequestListController" ng-init="Init()">

    <!--begin::Wrapper container-->
    <div class="app-container py-20">

        <!--begin::Main-->
        <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
            <!--begin::Content wrapper-->
            <div class="d-flex flex-column flex-column-fluid">


                <!--begin::Content-->
                <div id="kt_app_content" class="app-content flex-column-fluid ">

                    <!--begin::Row-->
                    <div class="row g-5 g-xl-8">
                        <!--begin::Col-->
                        <div class="col-xl-8 ps-xl-12">
                            <!--begin::Engage widget 12-->
                            <div class="card card-custom bg-body border-0 h-md-100">
                                <!--begin::Body-->
                                <div class="card-body d-flex justify-content-center flex-wrap ps-xl-15 pe-0">
                                    <!--begin::Wrapper-->
                                    <div class="flex-grow-1 mt-2 me-9 me-md-0">
                                        <!--begin::Title-->
                                        <div class="position-relative fs-1 z-index-2 fw-bold mb-5 meeting-request-list-header">
                                            <span>Meeting Requests</span>
                                        </div>
                                        <!--end::Title-->
                                        <!--begin::Text-->
                                        <span class="meeting-request-list-sub-header">
                                            Streamline Your Communication with Teachers. Manage all your meeting
                                            <br />
                                            requests in one place to keep track of important discussions.
                                        </span>
                                        <!--end::Text-->
                                    </div>
                                    <!--begin::Wrapper-->
                                    <!--begin::Illustration-->
                                    <img src="~/Images/meeting-request.svg" class="h-175px me-15" alt="">
                                    <!--end::Illustration-->
                                </div>
                                <!--end::Body-->
                            </div>
                            <!--end::Engage widget 12-->
                        </div>
                        <!--end::Col-->
                        <!--begin::Col-->
                        <div class="col-xl-8 ps-xl-12">

                            <!--begin::Tables Widget 5-->
                            <div class="card mb-5 mb-xl-8">

                                <!--begin::Body-->
                                <div class="card-body py-3">
                                    <div class="tab-content">
                                        <div class="card-header pt-7">
                                            <h3 class="card-title align-items-start flex-column">
                                                @* <span>Total <span ng-bind="TicketCount"></span> Tickets</span> *@
                                            </h3>
                                            <div class="card-toolbar">
                                                <div class="d-flex flex-stack flex-wrap gap-4">
                                                    <span ng-click="FillMeetingRequests()">
                                                        <img src="~/Images/refresh-button-gray.svg" title="Refresh" />
                                                    </span>

                                                    <a class="btn btn-primary" data-bs-toggle="tab" href="#" aria-selected="true" role="tab" ng-click="NewRequestButtonClick()">
                                                        <img src="~/Images/plus-button-blue.svg" />
                                                        &ensp; New request
                                                    </a>

                                                </div>
                                            </div>
                                        </div>

                                        <!--begin::Tap pane-->
                                        <div class="tab-pane fade show active" id="kt_table_widget_5_tab_1" role="tabpanel">
                                            <!--begin::Table container-->
                                            <div class="table-responsive">
                                                <!--begin::Table-->
                                                <script>
                                                    $("#kt_datatable_complex_header").DataTable({
                                                        "columnDefs": [{
                                                            "visible": false,
                                                            "targets": -1
                                                        }]
                                                    });
                                                </script>
                                                <table id="datatable_complex_header" class="table table-hover table-striped align-start gs-0 gy-4">
                                                    <!--begin::Table head-->
                                                    <thead>
                                                        <tr class="fw-bold fs-6 text-gray-800 px-7 rounded-3 table-text">
                                                            <th class="border-bottom">Request no</th>
                                                            <th class="border-bottom">Faculty</th>
                                                            <th class="border-bottom">Student</th>
                                                            <th class="border-bottom">Request date</th>
                                                            <th class="border-bottom">Requested time</th>
                                                            <th class="border-bottom">Approved date</th>
                                                            <th class="border-bottom">Approved time</th>
                                                            <th class="border-bottom">Status</th>
                                                            <th class="border-bottom"></th>
                                                        </tr>
                                                    </thead>

                                                    <!--end::Table head-->
                                                    <!--begin::Table body-->
                                                    <tbody ng-repeat="request in MeetingRequests">
                                                        <tr class="table-text">
                                                            <td class="rounded-4 rounded-end-0" style="text-align:center;">
                                                                Req_<span ng-bind="request.MeetingRequestIID"></span>
                                                            </td>
                                                            <td>
                                                                <span ng-bind="request.Faculty.Value"></span>
                                                            </td>
                                                            <td>
                                                                <span ng-bind="request.Student.Value"></span>
                                                            </td>
                                                            <td>
                                                                <span ng-bind="request.RequestedDateString"></span>
                                                            </td>
                                                            <td>
                                                                <span ng-bind="request.RequestedSlotTime"></span>
                                                            </td>
                                                            <td>
                                                                <span ng-bind="request.ApprovedDateString"></span>
                                                            </td>
                                                            <td>
                                                                <span ng-bind="request.ApprovedSlotTime"></span>
                                                            </td>
                                                            <td>
                                                                <span ng-bind="request.MeetingRequestStatusName" ng-if="request.MeetingRequestStatusName == 'Requested'" style="color: #EEA00A;"></span>
                                                                <span ng-bind="request.MeetingRequestStatusName" ng-if="request.MeetingRequestStatusName == 'Approved'" style="color: #327244;"></span>
                                                                <span ng-bind="request.MeetingRequestStatusName" ng-if="request.MeetingRequestStatusName == 'Under Review'" style="color: #316BA1;"></span>
                                                                <span ng-bind="request.MeetingRequestStatusName" ng-if="request.MeetingRequestStatusName == 'Rejected'" style="color: #B20808;"></span>
                                                                <span ng-bind="request.MeetingRequestStatusName" ng-if="request.MeetingRequestStatusName == 'Cancel'" style="color: #F13636;"></span>
                                                            </td>
                                                            <td></td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <!--end::Table-->
                                        </div>
                                    </div>
                                </div>
                                <!--end::Body-->
                            </div>
                            <!--end::Tables Widget 5-->

                        </div>
                        <!--end::Col-->
                    </div>
                    <!--end::Row-->
                </div>
                <!--end::Content-->
            </div>
        </div>
        <!--end:::Main-->
    </div>
    <!--end::Wrapper container-->

</div>