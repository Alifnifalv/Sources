@{
    ViewData["Title"] = "Vendor Contact List";
}
<!DOCTYPE html>
<html>
<head>
    <title>Vendor Contact List</title>
    <style>
        .registerButton {
            background-color: #007bff;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: auto; /* Change width to auto */
            display: inline-block;
            text-align: center;
            text-decoration: none;
            margin-left: auto; /* Align to the right */
        }

        .registerButton:hover {
            background-color: #0056b3;
            color: white; /* Set text color back to white on hover */
        }

        input[type="text"],
        input[type="number"],
        textarea {
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }
    </style>
</head>
<body>
    <div id="ContactList" ng-controller="VendorController" ng-init="Init('VendorContactList')">
        <h1 style="color: #3366cc; text-align: center;">Contact Persons</h1>
        <div style="padding-top:30px; text-align: right;">
            <a href="~/Home/VendorContacts" class="registerButton">Register Contact Person</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th><b>Sr No.</b></th>
                    <th><b>Name</b></th>
                    <th><b>Phone No</b></th>
                    <th><b>Email</b></th>
                    <th><b>Is Primary Contact</b></th>
                </tr>
            </thead>
            <tbody >
                <tr ng-repeat="cnct in VendorContactList">
                    <td>{{$index + 1}}</td>
                    <td>{{cnct.FirstName}}</td>
                    <td>{{cnct.PhoneNo1}}</td>
                    <td>{{cnct.AlternateEmailID1}}</td>
                    <td ng-show="cnct.IsPrimaryContactPerson"><span class="badge badge-info" style="width:100px;">Yes</span></td>
                    <td ng-show="!cnct.IsPrimaryContactPerson"><span class="badge badge-warning" style="width:100px;">No</span></td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>
