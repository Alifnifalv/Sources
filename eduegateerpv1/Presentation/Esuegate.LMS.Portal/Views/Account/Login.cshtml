                                    <div class="form-group mgbt-xs-20 loginfields">
                                        <div class="fv-row mb-8 fv-plugins-icon-container">
                                            <div class="my-4"><span class="text-gray-700 fw-semibold fs-6">User ID or email</span></div>
                                            @Html.TextBoxFor(model => model.Email, new { @class = "required form-control bg-transparent", @ng_model = "LoginModel.Email", @ng_keyup = "EmailKeyup();", @placeholder = "User ID/Email" })
                                            <span class="field-validation-error textleft ng-cloak text-danger fw-semibold" ng-show="IsEmailPasswordIncorrect">Invalid User name or Password</span>
                                        </div>
                                        <div class="fv-row mb-8 fv-plugins-icon-container">
                                            <div class="my-4"><span class="text-gray-700 fw-semibold fs-6">Password</span></div>
                                            @Html.PasswordFor(m => m.Password, new { @class = "required form-control bg-transparent", @ng_model = "LoginModel.Password", @ng_keyup = "PasswordKeyup();", @placeholder = "Password" })
                                            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "validateError d-flex text-danger fw-semibold" })
                                        </div>
                                    </div>
                                    <div class="displaylineBlock fullWidth fieldWrap">
                                        <button type="submit" value="Login" id="submitbtn" class="btn btn-primary w-100">
                                            Log In
                                            <span ng-hide="LoadingWithText" class="ng-hide" id="LoginButtonLoader">
                                                Please wait... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                            </span>
                                        </button>

                                    </div>
                                }
                            </div>
                        </div>
